<odoo>

    <record id="clv_person_document_setup_view_form_person_history" model="ir.ui.view">
        <field name="name">clv.person.document_setup.form</field>
        <field name="model">clv.person.document_setup</field>
        <field name="inherit_id" ref="clv_person_jcafb.clv_person_document_setup_view_form"/>
        <field name="priority" eval="8" />
        <field name="arch" type="xml">
            <field name="document_type_ids" position="replace">
                <field name="document_type_ids" options="{'no_open': False, 'no_create': True}" context="{'search_default_phase_id': phase_id}"/>
            </field>
            <field name="date_deadline" position="after">
                <field name="phase_id" options="{'no_open': False, 'no_create': True}"/>
            </field>
        </field>
    </record>

</odoo>
